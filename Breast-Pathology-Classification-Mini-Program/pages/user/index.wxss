
/* 用户登录 */ 
.account {
  position: relative;
  margin-top: 20px;
  padding: 20rpx 0;
  /* height: 200rpx; */

}
.notPage, .notPage icon {
  color: #ddd !important;
}
.account image {
  width: 120rpx;
  height: 120rpx;
  margin: 0 30rpx;
  vertical-align: middle;
  border-radius: 60rpx;
  box-shadow: 2px 2px 10px var(--shadow-color);
}
.account>view {
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  align-items: center;
  float: right;
  width: calc(100% - 180rpx);
  height: 120rpx;
}
.account>view text {
  width: 100%;
  color: #888;
}
.account .nickName {
  color: #333;
  font-size: 1.2rem;
  text-shadow: 1px 2px 2px var(--shadow-color);
}
.row-box:nth-child(1) {
  margin-bottom: 50rpx;
}
.row-box:nth-child(n+2) {
  margin-top: 20rpx;
}
.get-user-info, .get-user-info::after {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border:none;
  color: transparent;
  background-color: transparent;
}


.icon-shenfenzhengzheng {
  font-size: 1em;
  margin-top: -10px;
}
.account-error {
  font-size: .8rem;
}
.padding-empty {
  min-height:0;
  padding: 0;
}
.padding-empty > view {
  padding: 10rpx;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
  background-color: #fff;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.container {
  display: flex;
}
.row{
   border-top: 1px solid #ccc;
   border-bottom: 1px solid #ccc;
   display: flex;
   align-items: center;
   height: 80rpx;
   padding-left: 20rpx;
}
.text1{
    flex: 2;
}
.weui-input{
    flex: 6;
}


/* 个人中心 开始 */
.sheyingxin {
  background-color: #fff;
  width: 95%;
  margin-top: -30rpx;
  height: 180rpx;
  /* 给盒子添加阴影 */
  box-shadow: 0 2px 5px var(--shadow-color);
}

/* 病理诊断 */
.menzhen {
  display: flex;
  background-color: #fff;
  width: 95%;
  margin-top: -30rpx;
  height: 180rpx;
  transform: translateX(2.5%);
  flex-wrap: wrap;
  /* 给盒子添加阴影 */
  box-shadow: 0 2px 5px var(--shadow-color);
}

.menzhen-bottom {
  display: flex;
  /* 显示不开就换行 */
  flex-wrap: wrap;
  /* background-color: blueviolet; */
}

.menzhen-bottom-items {
  display: flex;
  width: 33.3%;
  /* 纵向显示 */
  flex-direction: column;
  /* 水平居中 */
  align-items: center;
}
.menzhen-bottom-items image {
  width: 100rpx;
  height: 100rpx;
  /* margin-left: 50rpx; */
  box-shadow: 0 2px 5px var(--shadow-color);
  
}
.menzhen-bottom-items text {
  color: #707070;
  font-weight: 700;
  margin-top: 3px;
}
.menzhen-bottom-items:nth-child(-n+1) {
  margin-top: 20rpx;
}
.menzhen-bottom-items:nth-child(n+2) {
  margin-top: 20rpx;
}